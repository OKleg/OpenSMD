<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:scrollbars="vertical"
    android:background="@color/gray"
    >

    <CheckBox
        android:id="@+id/checkTaskItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/delete_button_item"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        />

    <TextView
        android:id="@+id/taskTitleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/delete_button_item"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"

        android:layout_toStartOf="@+id/delete_button_item"
        android:layout_toEndOf="@+id/checkTaskItem"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/delete_button_item"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:text="@string/del" />

</RelativeLayout>